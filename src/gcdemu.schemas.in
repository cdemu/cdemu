<gconfschemafile>
    <schemalist>
        <schema>
            <key>/schemas/apps/gcdemu-applet/prefs/notifications</key>
            <applyto>/apps/gcdemu-applet-standalone/prefs/notifications</applyto>
            <owner>gcdemu-applet</owner>
            <type>bool</type>
            <default>true</default>
            <locale name="C">
                <short>Show notifications?</short>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/gcdemu-applet/prefs/use_system_bus</key>
            <applyto>/apps/gcdemu-applet-standalone/prefs/use_system_bus</applyto>
            <owner>gcdemu-applet</owner>
            <type>bool</type>
            <default>true</default>
            <locale name="C">
                <short>Use system bus (instead of session bus)?</short>
            </locale>
        </schema>
        <schema>
            <key>/schemas/apps/gcdemu-applet/prefs/icon_name</key>
            <applyto>/apps/gcdemu-applet-standalone/prefs/icon_name</applyto>
            <owner>gcdemu-applet</owner>
            <type>string</type>
            <default>gcdemu.svg</default>
            <locale name="C">
                <short>Name of icon to use (relative to gCDEmu's pixmap dir)</short>
            </locale>
        </schema>
    </schemalist>
</gconfschemafile>
