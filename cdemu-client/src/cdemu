import sys

import cdemu, cdemu.cdemu
from cdemu import globals as config

from gettext import bindtextdomain, textdomain

bindtextdomain(config.name)
textdomain(config.name)


if __name__ == '__main__':
    cdemu = cdemu.cdemu.CDEmu()
    
    ret = cdemu.process_command(sys.argv[1:])
    # ret is either True or False; we need to return 0 or -1, though...
    sys.exit(ret - 1)
    
